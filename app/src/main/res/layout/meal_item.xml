<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            style="?attr/materialCardViewOutlinedStyle"
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Media -->
                <ImageView
                    android:id ="@+id/mealImg"
                    android:layout_width="match_parent"
                    android:layout_height="194dp"

                    android:contentDescription="Piatto"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@drawable/spaghetti_al_pomodoro" />


                    <!-- Title, secondary and supporting text -->
                    <TextView
                        android:id ="@+id/mealName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pasta al pomodoro"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="16dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="16dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:tint="@color/material_on_surface_emphasis_medium"
                        app:srcCompat="@drawable/chef"
                        tools:ignore="UseAppTint" />

                    <TextView
                        android:id ="@+id/mealChef"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="PapÃ "
                        android:textStyle="bold"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?android:attr/textColorSecondary"
                        />
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        app:srcCompat="@drawable/baseline_access_time_24"
                        app:tint="@color/material_on_surface_emphasis_medium" />

                    <TextView
                        android:id ="@+id/mealTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="20:30"
                        android:layout_marginLeft="4dp"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?android:attr/textColorSecondary" />


                </LinearLayout>


                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:layout_marginEnd="16dp">

                    <Button
                        style="@style/Widget.Material3.Button.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:text="5"
                        app:icon="@drawable/baseline_thumb_up_off_alt_24"
                        />
                    <Button
                        style="@style/Widget.Material3.Button.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chat"
                        app:icon="@drawable/baseline_chat_bubble_outline_24"
                        />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>