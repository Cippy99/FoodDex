<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/user_bubble_layout.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/bubble_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bubble_big"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/user_initial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="U"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/bubble_background"
        app:layout_constraintEnd_toEndOf="@id/bubble_background"
        app:layout_constraintTop_toTopOf="@id/bubble_background"
        app:layout_constraintBottom_toBottomOf="@id/bubble_background"
        android:gravity="center" />

</androidx.constraintlayout.widget.ConstraintLayout>
